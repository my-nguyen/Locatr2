<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bignerdranch.android.locatr" >
    <!-- fine location from GPS radio -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- coarse location from cell towers and WiFi access points -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!-- to enable querying on Flickr and to download map data -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- query the state of the network -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- write temporary map data to external storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="C5:C6:2B:8F:AE:30:4C:2E:DB:CF:B7:61:59:B9:02:8C:45:EF:86:5B"/>
        <activity android:name=".LocatrActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
